{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "commonjs",
    "moduleResolution": "node",
    "checkJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true
  },
  "include": ["src/**/*", "tests/**/*", "jest.config.ts"],
}
